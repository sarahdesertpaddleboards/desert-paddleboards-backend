    "cookie": "^1.1.1",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "express": "^4.21.2",
    "jose": "6.1.0",
    "mysql2": "^3.15.0",
    "nanoid": "^5.1.6",
    "stripe": "^20.0.0",
    "superjson": "^2.2.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/node": "^24.7.0",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.1",
